Set objShell = CreateObject("WScript.Shell")

' Ask if the user is okay
response = InputBox("Are you ok? (Yes/No):", "Question")

' Check the user's response
If LCase(response) = "yes" Then
    ' Loop to display popup message 1000 times
    For i = 1 To 1000
        objShell.Popup "whyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyy", 0, "Error", 48
    Next
ElseIf LCase(response) = "no" Then
    ' Display a popup message saying "No" once
    objShell.Popup "No????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????", 0, "Error", 48
End If
